<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment para agregar alumnos.">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:weightSum="1"
                android:id="@+id/lyhSuperior">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/imgvAlumnoFoto"
                    android:layout_weight="0.10" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="118dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginTop="8dp"
                        android:hint="[Auto]"
                        android:id="@+id/txtAlumnoId"
                        android:editable="false" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_marginTop="28dp"
                        android:hint="Matrícula"
                        android:id="@+id/txtAlumnoMatricula"/>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/lyhSuperior"
                android:layout_marginTop="24dp"
                android:hint="Nombre"
                android:id="@+id/txtAlumnoNombre"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/txtAlumnoNombre"
                android:layout_marginTop="24dp"
                android:hint="Apellido Paterno"
                android:id="@+id/txtAlumnoApellidoPaterno"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/txtAlumnoApellidoPaterno"
                android:layout_marginTop="24dp"
                android:hint="Apellido Materno"
                android:id="@+id/txtAlumnoApellidoMaterno"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/txtAlumnoApellidoMaterno"
                android:layout_marginTop="24dp"
                android:hint="Generación"
                android:id="@+id/txtAlumnoGeneracion"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@+id/txtAlumnoGeneracion"
                android:layout_marginTop="24dp"
                android:hint="Fecha Nacimiento DD/MM/AAAA"
                android:inputType="date"
                android:id="@+id/txtAlumnoFechaNacimiento"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtAlumnoFechaNacimiento">

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>